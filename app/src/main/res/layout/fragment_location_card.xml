<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lokasiCard"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="30dp"
    android:padding="10dp"
    app:cardBackgroundColor="#fbf7f5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/foto_perumahanLokasi"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/logo_silohan"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/nama_perumahanLokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nama Perumahan"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/jarak_perumahanLokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Jarak KM"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/detail_location_card"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Detail" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>