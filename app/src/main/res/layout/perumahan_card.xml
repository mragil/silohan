<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_daftar_perumahan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#fbf7f5"
    app:cardCornerRadius="30dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/foto_perumahanIV"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:layout_marginStart="10sp"
            android:src="@drawable/logo_silohan"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama_perumahanTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Perumahan Adi Jaya"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/unit_perumahanTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="36/72"
                android:layout_marginStart="8dp"
                android:textColor="#7A7A7A"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/jarak_perumahanTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="1.2 KM"
                android:layout_marginStart="8dp"
                android:textColor="#7A7A7A"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textAlignment="textStart"/>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>